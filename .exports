export DOTFILES="$HOME/dotfiles"

# starship prompt config location
export STARSHIP_CONFIG=~/.config/starship/config.toml

# Larger bash history (allow 32Â³ entries; default is 500)
export HISTSIZE=50000000;
export HISTFILESIZE=$HISTSIZE;
export HISTCONTROL=ignoredups;
# Make some commands not show up in history
export HISTIGNORE=" *:ls:cd:cd -:pwd:exit:date:* --help:* -h:pony:pony add *:pony update *:pony save *:pony ls:pony ls *";

# Prefer US English and use UTF-8
export LANG="en_US.UTF-8";
export LC_ALL="en_US.UTF-8";

export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export ZSH_CACHE_DIR="$XDG_CACHE_HOME/zsh"
export ANDROID_SDK=$HOME/Android/Sdk
export ANDROID_SDK_ROOT=$ANDROID_SDK
export ANDROID_HOME=$ANDROID_SDK
export GROOVY_HOME=/usr/local/opt/groovy/libexec

export JAVA_HOME=$(jenv javahome)

export GOPATH=$(go env GOPATH)
export GOBIN=$GOPATH/bin

export N_PREFIX=$XDG_DATA_HOME/n

# Make `pip3 install --user` install packages to .local on os x`
export PYTHONUSERBASE=$HOME/.local

export PLATFORM=$(uname)

export KITTY_REMOTE=/tmp/kitty_remote

export EDITOR=vim
export SYSTEMD_EDITOR=vim
export VISUAL=vim

export LESS="-R"
export LESSOPEN="| /usr/bin/src-hilite-lesspipe.sh %s"

# fzf customization
export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -l -g ""'
export FZF_DEFAULT_OPTS="--layout=reverse --inline-info --preview='head -$LINES {}'"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# setup PATH
export PATH=/usr/local/sbin:$PATH
export PATH=$HOME/bin:$PATH
export PATH=$HOME/.local/bin:$PATH
export PATH=$ANDROID_SDK/platform-tools:$PATH
export PATH=$ANDROID_SDK/cmdline-tools/latest/bin:$PATH
export PATH=$HOME/.jenv/bin:$PATH                       # jenv Java environment manager
export PATH=$HOME/.fzf/bin:$PATH                        # fzf fuzzy finder
export PATH=$HOME/.cargo/bin:$PATH                      # rust scripts
export PATH=$GOBIN:$PATH                                # go binaries
export PATH=".:$PATH"                                   # gradle completion
export PATH=$HOME/.local/share/language-servers/kotlin-language-server/server/build/install/server/bin:$PATH


export NEO4J_HOME="/usr/local/opt/neo4j"
export PATH="/usr/local/opt/neo4j/bin:$PATH"

# Pure prompt customization
export PURE_PROMPT_SYMBOL=">"
export PURE_PROMPT_VICMD_SYMBOL="<"

# nvm-zsh customization
export NVM_COMPLETION=true
export NVM_LAZY_LOAD=true
export NVM_LAZY_LOAD_EXTRA_COMMANDS=('yarn', 'vim', 'idea', 'studio', 'code')

# zlib stuff
export LDFLAGS="-L/usr/local/opt/zlib/lib"
export CPPFLAGS="-I/usr/local/opt/zlib/include"

export PKG_CONFIG_PATH="/usr/local/opt/zlib/lib/pkgconfig"

